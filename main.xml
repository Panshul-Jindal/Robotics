<?xml version="1.0" ?>
<mujoco model="puma560">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  <option gravity="0 0 0" integrator="RK4" timestep="0.01"/>
  
  <default>
    <joint armature="0.1" damping="0.1" limited="true"/>
    <geom contype="0" conaffinity="0" type="cylinder" size="0.05 0.02" rgba="0.7 0.7 0.7 1"/>
  </default>
  
  <worldbody>
    <!-- Base -->
    <body name="base" pos="0 0 0">
      <geom type="box" size="0.3 0.3 0.1" rgba="0.3 0.3 0.3 1"/>
      <body name="link1" pos="0 0 0.1">
        <joint name="joint1" type="hinge" pos="0 0 0" axis="0 0 1" range="-180 180"/>
        <geom type="cylinder" size="0.08 0.1" rgba="0.8 0.2 0.2 1" pos="0 0 0.1"/>
        
        <!-- Link 2: α=-90°, a=0, d=0 -->
        <body name="link2" pos="0 0 0.2">
          <joint name="joint2" type="hinge" pos="0 0 0" axis="0 1 0" range="-90 90"/>
          <geom type="cylinder" size="0.06 0.25" rgba="0.2 0.8 0.2 1" pos="0.125 0 0" euler="0 90 0"/>
          
          <!-- Link 3: α=0°, a=a2, d=0 -->
          <body name="link3" pos="0.25 0 0">
            <joint name="joint3" type="hinge" pos="0 0 0" axis="0 1 0" range="-90 90"/>
            <geom type="cylinder" size="0.05 0.2" rgba="0.2 0.2 0.8 1" pos="0.1 0 0" euler="0 90 0"/>
            
            <!-- Link 4: α=-90°, a=a3, d=d3 -->
            <body name="link4" pos="0.2 0 0">
              <joint name="joint4" type="hinge" pos="0 0 0" axis="1 0 0" range="-180 180"/>
              <geom type="sphere" size="0.04" rgba="0.8 0.8 0.2 1" pos="0 0 0.075" euler="90 0 0"/>
              
              <!-- Link 5: α=90°, a=0, d=d4 -->
              <body name="link5" pos="0 0 0.15">
                <joint name="joint5" type="hinge" pos="0 0 0" axis="0 1 0" range="-90 90"/>
                <geom type="sphere" size="0.03" rgba="0.8 0.2 0.8 1" pos="0 0 0.05"/>
                
                <!-- Link 6: α=-90°, a=0, d=0 -->
                <body name="link6" pos="0 0 0.1">
                  <joint name="joint6" type="hinge" pos="0 0 0" axis="1 0 0" range="-180 180"/>
                  <geom type="sphere" size="0.02" rgba="0.2 0.8 0.8 1" pos="0 0 0.04"/>
                  
                  <!-- End effector -->
                  <body name="end_effector" pos="0 0 0.08">
                    <geom type="box" size="0.03 0.03 0.02" rgba="0.1 0.1 0.1 1"/>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="motor1" joint="joint1" gear="100"/>
    <motor name="motor2" joint="joint2" gear="100"/>
    <motor name="motor3" joint="joint3" gear="100"/>
    <motor name="motor4" joint="joint4" gear="50"/>
    <motor name="motor5" joint="joint5" gear="50"/>
    <motor name="motor6" joint="joint6" gear="50"/>
  </actuator>
</mujoco>